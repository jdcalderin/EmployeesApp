@model IEnumerable<EmployeesApp.web.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}



<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">



<script src="~/js/App.js"></script>

<hr />

<nav class="navbar navbar-light bg-light">
    <h1>Employees</h1>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="number" id="txtid" placeholder="Search" pattern="\d*" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" id="btnSh" type="button">Search</button>
    </form>
</nav>


<div class="row justify-content-center">
    <div class="col-auto">
        <table class="table table-sm table-responsive-md nowrap w-100" id="employeeTable">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Contract Type Name</th>
                    <th>Role Id</th>
                    <th>Role Name</th>
                    <th>Role Description</th>
                    <th>Annual Salary</th>
                </tr>
            </thead>

        </table>
    </div>
</div>